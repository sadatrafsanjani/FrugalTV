{
  "name": "frugaltv",
  "version": "1.0.0",
  "description": "Entertainment! Always",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [
    "tv"
  ],
  "author": "sadatrafsanjani",
  "license": "ISC",
  "build": {
    "appId": "com.frugal.tv",
    "productName": "FrugalTV",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "asset/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "asset/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "asset/icons/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^35.1.5",
    "electron-reloader": "^1.2.3"
  },
  "dependencies": {
    "bootstrap": "^5.3.5",
    "electron-builder": "^26.0.12"
  }
}
